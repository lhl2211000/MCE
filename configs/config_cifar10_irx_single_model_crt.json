{
    "name": "Imbalance_CIFAR10LT_IR10_TSEA",
    "n_gpu": 1,

    "arch": {
        "type": "ResNet32Model",
        "args": {
            "num_classes": 10,
            "reduce_dimension": false,
            "use_norm": true,
            "num_experts": 1
        }
    },
    "data_loader": {
        "type": "ImbalanceCIFAR10DataLoader",
        "args":{
            "data_dir": "./data/CIFAR-10",
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 0,
            "balanced": true,
            "imb_factor": 0.02

        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.05,
            "weight_decay": 5e-4,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "add_extra_info": false,
    "loss": {
        "type": "CrossEntropyLoss",
        "args": {
        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "CustomLR",
        "args": {
            "step1": 160,
            "step2": 180,
            "gamma": 0.1,
            "warmup_epoch": 5
        }
    },
    "trainer": {
        "epochs": 20,
        "save_dir": "saved/single_model/cifar10/ir10/tade_e200_inv2_bs128_lr0.1",
        "save_period": 100,
        "verbosity": 2, 
        "monitor": "max val_accuracy",
        "tensorboard": false
    }
}
