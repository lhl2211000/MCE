{
    "name": "ImageNet_LT_ResNeXt50_TADE",
    "n_gpu": 1,

    "arch": {
        "type": "ResNeXt50Model",
        "args": {
            "num_classes": 20,
            "reduce_dimension": false,
            "num_experts": 1
        }
    },
    "data_loader": {
        "type": "ImageNetLTDataLoader",
        "args":{
            "data_dir": "./data/imagenet",
            "batch_size": 16,
            "shuffle": true,
            "balanced": true,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.025,
            "weight_decay": 5e-4,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "add_extra_info": false,
    "loss": {
        "type": "LDAMLoss",
        "args": {
        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 180,
            "eta_min": 0
        }
    },
    "trainer": {
        "epochs": 180,
        "save_dir": "saved/imagenet_single_model/tade_e180_inv2_bs64_lr0.025",
        "save_period": 180,
        "verbosity": 2,
        "monitor": "max val_accuracy",
        "tensorboard": false
    }
}
